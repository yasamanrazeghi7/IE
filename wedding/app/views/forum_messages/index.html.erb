<h1>Listing forum_messages</h1>

<table>
  <thead>
    <tr>
      <th>Forum thread</th>
      <th>Content</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @forum_messages.each do |forum_message| %>
      <tr>
        <td><%= forum_message.forum_thread_id %></td>
        <td><%= forum_message.content %></td>
        <td><%= forum_message.user_id %></td>
        <td><%= link_to 'Show', forum_message %></td>
        <td><%= link_to 'Edit', edit_forum_message_path(forum_message) %></td>
        <td><%= link_to 'Destroy', forum_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Forum message', new_forum_message_path %>
